---
import '../styles/global.css';
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Dashboard"
const dashSrc = "https://personal-study-tracker-dash-c07f5e63ba12.herokuapp.com"
---
<BaseLayout pageTitle={pageTitle}>
  <style>
    .iframe-container {
      position: relative;
      width: 100%;
      height: 100%;
      padding-top: 56.25%;
      overflow: hidden;
    }
    .responsive-iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }
  </style>
    <div class="iframe-container">
      <iframe
        class="responsive-iframe"
        src={dashSrc}
        title="Dash Application"
      ></iframe>
  </div>
</BaseLayout>